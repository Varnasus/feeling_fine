<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.varnasus.sensor_mark1.WiFiActivity">

    <RelativeLayout
        android:id="@+id/wifi_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enable_wifi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Enable WiFi" />

        <ToggleButton
            android:id="@+id/wifi_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_on_off">

        <TextView
            android:id="@+id/ssid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSID"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="WiFi Name" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssid">

        <TextView
            android:id="@+id/bssid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSSID"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bssid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="WiFi Name" />


    </RelativeLayout>

</RelativeLayout>
